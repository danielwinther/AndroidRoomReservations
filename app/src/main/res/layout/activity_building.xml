<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.danielwinther.androidroomreservations.BuildingActivity"
    style="@style/layout">
    <fragment
        android:name="com.example.danielwinther.androidroomreservations.TopFragment"
        android:id="@+id/topFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/cityDetails"
        style="@style/headline" />
    <TextView
        android:id="@+id/cityName"
        style="@style/underHeadline" />

    <TextView
        android:text="@string/building"
        style="@style/headline" />

    <ListView
        android:id="@+id/listView"
        style="@style/list" />

    <Button
        android:onClick="back"
        android:text="@string/backButton"
        style="@style/button" />
</LinearLayout>

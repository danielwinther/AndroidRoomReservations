<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danielwinther.androidroomreservations">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BuildingActivity" />
        <activity android:name=".RoomActivity" />
        <activity android:name=".CityActivity" />
        <activity android:name=".ReservationActivity" />
        <activity android:name=".CreateReservationActivity" />
        <activity android:name=".ReservationDetailActivity" />
        <activity android:name=".MyReservationActivity" />
        <activity
            android:name=".UpdateReservationActivity"
            android:label="@string/title_activity_update_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
